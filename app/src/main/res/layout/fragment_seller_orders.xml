<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#59788E"
    tools:context=".fragments.SellerOrdersFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF8E5"
        tools:context=".InventoryActivity">

        <!--recycler view to display our data-->
        <TextView
            android:id="@+id/textViewOrderCenters"
            android:layout_width="197dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="108dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="108dp"
            android:fontFamily="@font/merriweather_blackitalic"
            android:gravity="center"
            android:text="Order Center"
            android:textColor="#E26A2C" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewOrderCenter"
            android:layout_width="wrap_content"
            android:layout_height="576dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="61dp" />

    </RelativeLayout>

</FrameLayout>