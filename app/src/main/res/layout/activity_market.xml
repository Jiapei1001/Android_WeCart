<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".market.Market01Activity">

    <ScrollView
        android:id="@+id/market01ScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/market01"
                android:layout_width="wrap_content"
                android:layout_height="2800dp"
                android:background="@drawable/market_01"
                android:contentDescription="TODO"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/store1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="800dp"
                android:background="@null"
                android:onClick="onClick"
                android:rotation="-20"
                android:src="@drawable/store_01"
                app:layout_constraintEnd_toEndOf="@id/market01"
                app:layout_constraintHorizontal_bias="0.12"
                app:layout_constraintStart_toStartOf="@id/market01"
                app:layout_constraintTop_toTopOf="@id/market01" />

            <ImageButton
                android:id="@+id/store2"
                android:layout_width="240dp"
                android:layout_height="260dp"
                android:layout_marginTop="300dp"
                android:background="@null"
                android:onClick="onClick"
                android:rotation="-10"
                android:scaleType="fitCenter"
                android:src="@drawable/store_02"
                app:layout_constraintEnd_toEndOf="@id/market01"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="@id/market01"
                app:layout_constraintTop_toTopOf="@id/market01" />

            <ImageButton
                android:id="@+id/store3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="1700dp"
                android:background="@null"
                android:onClick="onClick"
                android:rotation="20"
                android:scaleType="fitCenter"
                android:src="@drawable/store_03"
                app:layout_constraintEnd_toEndOf="@id/market01"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="@id/market01"
                app:layout_constraintTop_toTopOf="@id/market01" />

            <ImageButton
                android:id="@+id/store4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginTop="2100dp"
                android:background="@null"
                android:onClick="onClick"
                android:rotation="-16"
                android:scaleType="fitCenter"
                android:src="@drawable/store_04"
                app:layout_constraintEnd_toEndOf="@id/market01"
                app:layout_constraintHorizontal_bias="0.78"
                app:layout_constraintStart_toStartOf="@id/market01"
                app:layout_constraintTop_toTopOf="@id/market01" />

            <ImageButton
                android:id="@+id/store5"
                android:layout_width="210dp"
                android:layout_height="200dp"
                android:layout_marginTop="1160dp"
                android:background="@null"
                android:onClick="onClick"
                android:rotation="-70"
                android:scaleType="fitCenter"
                android:src="@drawable/store_05"
                app:layout_constraintEnd_toEndOf="@id/market01"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="@id/market01"
                app:layout_constraintTop_toTopOf="@id/market01" />

            <ImageView
                android:id="@+id/storeGoBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/store_go_back" />

            <ImageView
                android:id="@+id/nextCommunity"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:onClick="onClick"
                android:rotation="-30"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>